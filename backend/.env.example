# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Secret key for JWT token signing - Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database Configuration
# For Railway: Use the DATABASE_URL provided by Railway's PostgreSQL plugin
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Admin User Credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# CORS Configuration (comma-separated list of allowed origins)
# Example: https://your-app.vercel.app,https://custom-domain.com
CORS_ORIGINS=http://localhost:3000
